{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    
    // **CLAVE:** Define la base para la resoluci√≥n de rutas
    "baseUrl": ".", 
    
    // **CLAVE:** Define el alias
    "paths": {
      // El alias @/ ahora apunta a la carpeta src
      "@/*": [
        "./src/*" 
      ]
    }
  },
  "include": [
      "src/**/*", 
      "src/**/*.vue"
    ],
    "exclude": [
      "node_modules", 
      "dist"
    ]
}